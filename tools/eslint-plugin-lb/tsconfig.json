{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"declaration": true,
		"declarationMap": false,
		"sourceMap": false,
		"rootDir": "src",
		"outDir": "dist",
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "tests"]
}
